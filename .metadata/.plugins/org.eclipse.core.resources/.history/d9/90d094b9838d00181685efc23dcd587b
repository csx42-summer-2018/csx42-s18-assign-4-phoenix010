package maxKVisitors.util;


import java.io.File;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.PrintStream;

public class Results implements StdoutDisplayInterface{
	/**
	 * Method reads the input sting and displays it in our console
	 * 
	 * @param s. s a string which will be printed in the console
	 */
	public void writeToStdout(String s) {

		System.out.println("The Sum of all elements in the array list is:  " + s);

	}
	
	/**
	 * method takes the input and print the input in a file which is generated by it
	 * 
	 * @param s. s is a string which will be printed in the output.txt file.
	 */
	public void writeToFile(String s) {
		try {
			PrintStream myconsole = new PrintStream(new File("output.txt"));
			System.setOut(myconsole);
			myconsole.print("The Sum of all elements in the array list is:  " + s);
		} catch (FileNotFoundException e) {
			System.out.println(e);
		}
	}

	/**
	 * Method prints the String s. Its is printing the results of the test cases
	 * 
	 * @param s. s is the String which is the result of our test cases.
	 */
	public void storeNewResult(String s) {
		System.out.println("Test " + s);
	}

}